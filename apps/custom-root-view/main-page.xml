<TabView xmlns="http://schemas.nativescript.org/tns.xsd">
  <TabView.items>
    <TabViewItem title="List">
      <TabViewItem.view>
        <Frame />
      </TabViewItem.view>
    </TabViewItem>
    <TabViewItem title="About">
      <TabViewItem.view>
        <StackLayout>
          <Image margin="10" src="~/res/telerik-logo.png" />
          <Label margin="10" textWrap="true" text="{{ aboutText }}" />
        </StackLayout>
      </TabViewItem.view>
    </TabViewItem>
  </TabView.items>
</TabView>