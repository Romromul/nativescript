{
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"target": "es2015",
		"module": "commonjs",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es2017"
		],
		"sourceMap": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"diagnostics": true,
		"paths": {
			"@nativescript/webpack": [
				"src"
			]
		},
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules"
	]
}
